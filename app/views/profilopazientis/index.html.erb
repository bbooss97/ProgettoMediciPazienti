<p id="notice"><%= notice %></p>

<h1>Profilopazientis</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Eta</th>
      <th>Email</th>
      <th>Descrizione</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profilopazientis.each do |profilopazienti| %>
      <tr>
      <%if profilopazienti.paziente_id == current_paziente.id%>
        <td><%= profilopazienti.nome %></td>
        <td><%= profilopazienti.cognome %></td>
        <td><%= profilopazienti.eta %></td>
        <td><%= profilopazienti.email %></td>
        <td><%= profilopazienti.descrizione %></td>
        <td><%= link_to 'Show', profilopazienti %></td>
        <td><%= link_to 'Edit', edit_profilopazienti_path(profilopazienti) %></td>
       
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


